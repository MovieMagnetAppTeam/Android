<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.pam.pam_front.fragments.TvFragment"
    android:background="#33333e">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/most_pupular_tv"
            android:textSize="30dp"
            android:textColor="@color/colorWhite"/>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <android.support.v7.widget.CardView
                    android:layout_width="160dp"
                    android:layout_height="200dp"
                    android:layout_margin="5dp" >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#515164">

                        <ImageView
                            android:id="@+id/movieCover0"
                            android:layout_width="match_parent"
                            android:layout_height="170dp"
                            app:srcCompat="@mipmap/ic_launcher" />

                        <TextView
                            android:id="@+id/movieTitle0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="TextView"
                            android:layout_below="@id/movieCover0"
                            android:textSize="20dp"/>
                    </RelativeLayout>

                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="160dp"
                    android:layout_height="200dp"
                    android:layout_margin="5dp" >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#515164">

                        <ImageView
